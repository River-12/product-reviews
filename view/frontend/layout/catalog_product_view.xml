    <head>
        <css src="Riverstone_ProductReviews::rltsquare_productreviewimages.css"/>
    </head>
    <body>
        <referenceBlock name="product.review.form">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Riverstone_ProductReviews::review/form.phtml</argument>
            </action>
            <arguments>
                <argument name="viewModel" xsi:type="object">Riverstone\ProductReviews\ViewModel\Customer</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
